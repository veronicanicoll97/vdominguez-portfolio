---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Header from "../components/Header.astro";
import CardDetalle from "../components/CardDetalle.astro";
import Container from "../components/Container.astro";
import ProyectoIcon from "../components/icons/Project.astro";
import CardTitle from "../components/CardTitle.astro";
import Experiencie from "../components/icons/Experiencie.astro";
import Experiencies from "../components/Experiences.astro";
import Projects from "../components/Projects.astro";
import AboutMeIcon from "../components/icons/AboutMe.astro";
import AboutMe from "../components/AboutMe.astro";
---

<Layout title="Portafolio de Verónica Domínguez">
  <Hero />
  <Header />
  <Container>
    <div class="md:grid grid-cols-10 gap-4 py-3 min-h-screen">
      <div class="col-span-4 bg-secondary">
        <CardDetalle />
      </div>
      <div class="col-span-6">
        <section id="sobremi">
          <CardTitle titulo="Sobre mí">
            <AboutMeIcon class="size-6" />
          </CardTitle>

          <AboutMe />
        </section>

        <section id="experiencia">
          <CardTitle titulo="Experiencia">
            <Experiencie class="size-6" />
          </CardTitle>

          <Experiencies />
        </section>

        <section id="proyectos">
          <CardTitle titulo="Proyectos">
            <ProyectoIcon class="size-6" />
          </CardTitle>

          <Projects />
        </section>
      </div>
    </div>
  </Container>
</Layout>